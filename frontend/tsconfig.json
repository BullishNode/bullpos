{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "allowJs": true,
        "checkJs": false,
        "types": [
            "node"
        ]
    },
    "include": [
        "*.ts",
        "*.js",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}